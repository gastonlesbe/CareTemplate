<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gastonlesbegueris.caretemplate">

    <!-- Network for Firebase/Ads -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Android 13+ (API 33) notifications permission (still request at runtime in code) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".CareTemplateApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CareTemplate">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>


        <!-- Forzar a usar la config de Google Mobile Ads -->
        <property
            android:name="android.adservices.AD_SERVICES_CONFIG"
            android:resource="@xml/gma_ad_services_config"
            tools:replace="android:resource" />

        <!-- AdMob app id (string in res/values/strings.xml) -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />

        <!-- Launcher activity -->
        <activity
            android:name=".ui.SubjectListActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".ui.SubjectHistoryActivity"
            android:configChanges="orientation|screenSize" />
        <activity 
            android:name=".ui.ExpensesActivity"
            android:configChanges="orientation|screenSize" />
        <activity 
            android:name=".ui.AgendaMonthActivity"
            android:configChanges="orientation|screenSize" />





    </application>
</manifest>
