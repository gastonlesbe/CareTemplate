<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gastonlesbegueris.caretemplate">

    <!-- Network for Firebase/Ads -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Android 13+ (API 33) notifications permission (still request at runtime in code) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Permisos para alarmas exactas (necesario para notificaciones cuando la app está cerrada) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".CareTemplateApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_header_flavor"
        android:roundIcon="@mipmap/ic_header_flavor_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CareTemplate">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>


        <!-- Appodeal App Key (string in res/values/strings.xml) -->
        <meta-data
            android:name="com.appodeal.application_key"
            android:value="@string/appodeal_app_key" />

        <!-- AdMob App ID (required by Appodeal since it uses AdMob as one of its ad networks) -->
        <!-- This is needed even though Appodeal handles ad serving -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />

        <!-- Launcher activity -->
        <activity
            android:name=".ui.SubjectListActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".ui.SubjectHistoryActivity"
            android:configChanges="orientation|screenSize" />
        <activity 
            android:name=".ui.ExpensesActivity"
            android:configChanges="orientation|screenSize" />
        <activity 
            android:name=".ui.MonthExpensesDetailActivity"
            android:configChanges="orientation|screenSize" />
        <activity 
            android:name=".ui.AgendaActivity"
            android:configChanges="orientation|screenSize" />
        <activity 
            android:name=".ui.AgendaMonthActivity"
            android:configChanges="orientation|screenSize" />
        <activity 
            android:name=".ui.MainActivity"
            android:configChanges="orientation|screenSize" />

        <!-- BroadcastReceiver para notificaciones de eventos -->
        <receiver
            android:name=".util.EventNotificationReceiver"
            android:enabled="true"
            android:exported="false" />
        
        <!-- BroadcastReceiver para reprogramar notificaciones después del reinicio -->
        <receiver
            android:name=".util.BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

    </application>
</manifest>
