<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- res/values/styles.xml -->

    <!-- ====== SHAPES ====== -->
    <!-- Alias genÃ©rico que algunos layouts esperan como @style/Shape -->
    <style name="Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Nuestro shape por defecto -->
    <style name="AppShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- VariaciÃ³n â€œMediumâ€ para usar como overlay -->
    <style name="AppShape.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- ====== BOTONES ====== -->
    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="shapeAppearance">@style/AppShape</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Por si usÃ¡s Outlined -->
    <style name="AppButton.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">sans-serif</item>
        <item name="shapeAppearance">@style/AppShape</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- ====== TEXTOS ====== -->
    <style name="AppText.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="AppText.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">sans-serif</item>
    </style>



    <style name="AppText.Subtitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">0.8</item>
    </style>
    <!-- res/values/styles.xml -->


    <!-- Chip/Badge (si usÃ¡s) -->
    <style name="AppChip" parent="Widget.Material3.Chip.Assist">
        <item name="shapeAppearanceOverlay">@style/AppShape.Medium</item>
    </style>

    <!-- Card genÃ©rica -->
    <style name="AppCard" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearance">@style/AppShape.Medium</item>
    </style>

    <!-- ðŸ”˜ Estilo base para todos los botones principales -->




    <!-- âš™ï¸ Variante icÃ³nica (para botones con Ã­conos redondos) -->
    <style name="AppButton.Icon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="cornerRadius">50dp</item>
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="iconTint">?attr/colorOnSecondaryContainer</item>
    </style>

    <style name="AppText.Small" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="AppIconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="cornerRadius">50dp</item>
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="iconTint">?attr/colorOnSecondaryContainer</item>
    </style>
    <!-- TipografÃ­as -->


    <style name="Text.H6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/app_on_surface</item>
    </style>

    <style name="Text.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/app_on_surface</item>
    </style>

    <style name="Text.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/app_on_surface</item>
    </style>

    <style name="Text.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Shapes -->
    <style name="Shape.Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/app_surface</item>
        <item name="titleTextColor">@color/app_on_surface</item>
        <item name="subtitleTextColor">@color/app_on_surface</item>
        <!-- No aplicar tint al icono de navegaciÃ³n, usa el color fijo del drawable -->
        <item name="titleCentered">false</item>
    </style>

    <!-- Botones -->
    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/app_primary</item>
        <item name="android:textColor">@color/app_on_primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/app_primary</item>
        <item name="iconTint">@color/app_primary</item>
        <item name="android:textColor">@color/app_primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.App.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/app_primary</item>
        <item name="iconTint">@color/app_primary</item>
    </style>

    <!-- FAB -->
    <style name="Widget.App.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/app_primary</item>
        <item name="tint">@color/app_on_primary</item>
    </style>

    <!-- TextInput -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/app_on_surface</item>
        <item name="boxStrokeColor">@color/app_primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="Widget.App.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/app_on_surface</item>
    </style>

    <!-- Card -->
    <style name="Widget.App.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/app_surface</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
    </style>

</resources>
