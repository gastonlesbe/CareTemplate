<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Primera línea: icono del sujeto + nombre del sujeto + fecha -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivSubjectIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Icono del sujeto"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvSubject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/placeholder_subject"
                style="@style/AppText.Subtitle"/>

            <TextView
                android:id="@+id/tvWhen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_date_format"
                style="@style/AppText.Small"/>
        </LinearLayout>

        <!-- Título del evento -->
        <TextView
            android:id="@+id/tvTitle"
            style="@style/AppText.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/placeholder_event_title"
            android:textStyle="bold" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/tvKilometers"
                style="@style/AppText.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/placeholder_kilometers"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvCost"
                style="@style/AppText.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_cost"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Nota opcional (si no la usás, queda GONE y no molesta al adapter) -->
        <TextView
            android:id="@+id/tvNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppText.Subtitle"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:text=""/>

        <!-- Pie: costo + acciones + checkbox realizado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:id="@+id/btnEdit"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_edit"
                app:iconTint="@color/app_on_primary"
                app:backgroundTint="?attr/colorPrimary"
                app:cornerRadius="50dp"
                android:contentDescription="@string/edit"
                android:layout_margin="8dp"
                 />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/delete"
                app:icon="@drawable/ic_delete"
                android:src="@drawable/ic_delete"
                app:iconTint="@color/app_on_primary"
                app:backgroundTint="?attr/colorPrimary"
                app:cornerRadius="50dp"
                android:layout_margin="8dp"/>

            <CheckBox
                android:id="@+id/cbDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/event_realized"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
